(define (draw-bars x)
  (when (not (zero? x))
        (set! ctx.strokeStyle (rgb-to-hex (modulo (* x 10) 255)
                                          (modulo (* x 30) 255)
                                          0))
        (set! ctx.lineWidth 2)
        (ctx.beginPath)
        (ctx.moveTo (* x 100) 0)
        (ctx.lineTo (* x 100) 20000)
        (ctx.stroke)
        (draw-bars (- x 1))))

(define (draw-barsv y)
  (when (not (zero? y))
        (set! ctx.strokeStyle (rgb-to-hex (modulo (* y 10) 255)
                                          (modulo (* y 30) 255)
                                          0))
        (set! ctx.lineWidth 2)
        (ctx.beginPath)
        (ctx.moveTo 0 (* y 100))
        (ctx.lineTo 20000 (* y 100))
        (ctx.stroke)
        (draw-barsv (- y 1))))

(define (draw-grid)
  (set! ctx.fillStyle "#000")
  (draw-bars 200)
  (draw-barsv 200))

