(define (find-pattern patterns id)
  (cond
   ((null? patterns) #f)
   ((eq? (pattern-id (car patterns)) id) (car patterns))
   (else (find-pattern (cdr patterns) id))))


(define (connection fx fy tx ty) (list fx fy tx ty))

(define (make-connections patterns)
