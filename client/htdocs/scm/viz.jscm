        (foldl
         (lambda (pattern r)
           (let ((parent (find-pattern patterns (pattern-parent pattern))))
             (msg (+ (pattern-id pattern) "->" (pattern-parent pattern)))
             (if parent
                 (cons (dbg (connection
                             (pattern-x pattern) (pattern-y pattern)
                             (pattern-x parent) (pattern-y parent))) r)
                 r)
             ))
         ()
         patterns)))

